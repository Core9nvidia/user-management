<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <span data-gender="<%= user.gender %>" data-status="<%= user.status %>" id="datastore"></span>
    <div class="container">
            <div class="all-user">
                <div class="box-nav d-flex justify-between">
                   <div class="filter">
                       <button><a href="/" style="text-decoration: none;"><i class="fas fa-angle-double-left"></i> All Users</a></button>
                   </div>
                </div>
                <div class="form-title text-center middle">
                    <h2 class="text-dark middle">New User</h2>
                    <span class="text-light middle">Use the below form to create a new account</span>
                </div>
        
                <form action="/add-user" method="POST">
                    <label for="name" >Name</label><br>
                    <input class="full-width lower" type="text" name="name" value="<%= user.name %>" placeholder="Mark Stoenis" required><br>
                    <label for="email">Email</label><br>
                    <input class="full-width lower" type="email" name="email" value="<%= user.email %>" placeholder="example@gmail.com" required><br>

                    <div class="form-group" style="margin-bottom: 12px;">
                        Gender:
                            <input type="radio" id="radio-1" name="gender" value="Male" required>
                            <label for="radio-1">Male</label>
                            <input type="radio" id="radio-2"  name="gender" value="Female">
                            <label for="radio-2">Female</label><br>
                    </div>

                    <div class="form-group" style="margin-bottom: 12px;">
                        Status:
                            <input type="radio" id="radio-3"  name="status" value="Active" required>
                            <label for="radio-3">Active</label>

                            <input type="radio" id="radio-4"  name="status" value="Inactive">
                            <label for="radio-4">Inactive</label><br>
                    </div>
                        <button id="save-btn" type="submit" class="btn text-dark update full-width">Update</button>
                </form>
               
            </div>
    </div>
    <p id="roha"></p>
      <script>
          console.log("thats it....");
        //   const pp=document.getElementById('roha');
        //   pp.innerHTML="yup";
        var gender=document.getElementById('datastore').dataset.gender;
        var status=document.getElementById('datastore').dataset.status;
        console.log(gender,status);
        if(gender == "Male")document.getElementById('radio-1').checked=true;
        else document.getElementById('radio-2').checked=true;
        if(status == "Active")document.getElementById('radio-3').checked=true;
        else document.getElementById('radio-4').checked=true;
        // const pp=document.getElementById('roha');
        // pp.innerHTML=gender;



        
      </script>

</body>
</html>